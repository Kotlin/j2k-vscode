{
  "name": "j2k-vscode",
  "displayName": "j2k-vscode",
  "description": "A VS Code extension that provides a polished user experience for converting Java files to Kotlin with manual review capabilities.",
  "version": "0.0.15",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kotlin/j2k-vscode.git"
  },
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "j2k",
          "title": "Java to Kotlin",
          "icon": "$(symbol-key)"
        }
      ]
    },
    "views": {
      "j2k": [
        {
          "id": "j2k.completed",
          "name": "Converted Files"
        },
        {
          "id": "j2k.queue",
          "name": "Conversion Queue"
        }
      ]
    },
    "commands": [
      {
        "command": "j2k.convertFile",
        "title": "Convert to Kotlin",
        "category": "J2K"
      },
      {
        "command": "j2k.queueFile",
        "title": "Convert to Kotlin",
        "category": "J2K"
      },
      {
        "command": "j2k.acceptAndReplaceConversion",
        "title": "Accept Conversion and Replace",
        "category": "J2K"
      },
      {
        "command": "j2k.acceptFromToolbar",
        "title": "Accept Conversion and Replace",
        "category": "J2K"
      },
      {
        "command": "j2k.cancelConversion",
        "title": "Cancel Conversion",
        "category": "J2K"
      },
      {
        "command": "j2k.cancelFromToolbar",
        "title": "Cancel Conversion",
        "category": "J2K"
      },
      {
        "command": "j2k.setApiKey",
        "title": "Set API Key",
        "category": "J2K"
      },
      {
        "command": "j2k.configureKotlin",
        "title": "Configure Kotlin for workspace",
        "category": "J2K"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "j2k.queueFile",
          "when": "resourceExtname == .java || explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "j2k.acceptFromToolbar",
          "group": "navigation@1",
          "when": "inDiffEditor && j2k.diffActive"
        },
        {
          "command": "j2k.cancelFromToolbar",
          "group": "navigation@2",
          "when": "inDiffEditor && j2k.diffActive"
        }
      ],
      "commandPalette": [
        {
          "command": "j2k.acceptFromToolbar",
          "when": "false"
        },
        {
          "command": "j2k.cancelFromToolbar",
          "when": "false"
        },
        {
          "command": "j2k.configureKotlin",
          "when": "workspaceFolderCount != 0"
        }
      ]
    },
    "keybindings": [
      {
        "key": "ctrl+enter",
        "command": "j2k.acceptAndReplaceConversion",
        "when": "inDiffEditor && editorLangId == kotlin && resourceScheme == untitled"
      },
      {
        "key": "escape",
        "command": "j2k.cancelConversion",
        "when": "inDiffEditor && editorLangId == kotlin && resourceScheme == untitled"
      }
    ],
    "configuration": {
      "title": "Java to Kotlin converter",
      "properties": {
        "j2k.provider": {
          "type": "string",
          "enum": [
            "local-ollama",
            "openrouter",
            "openai"
          ],
          "default": "local-ollama",
          "description": "Which LLM backend to use for Java to Kotlin conversion."
        },
        "j2k.model": {
          "type": "string",
          "default": "codellama:instruct",
          "description": "Model tag accepted by the selected provider."
        },
        "j2k.ollama.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "The base URL of the target Ollama instance."
        },
        "j2k.openRouter.baseUrl": {
          "type": "string",
          "default": "https://openrouter.ai/api/v1",
          "description": "The base URL of the target OpenRouter instance - only override if self-hosted."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write src",
    "release": "ts-node scripts/release.ts $npm_config_ver",
    "test": "npm-run-all -l test:unit:run test:integration:run",
    "test:unit": "npm run compile-tests && npm run test:unit:run",
    "test:unit:run": "vscode-test --config .vscode-test.unit.mjs",
    "test:integration": "npm run compile-tests && npm run test:integration:run",
    "test:integration:run": "vscode-test --config .vscode-test.integration.mjs",
    "score": "ts-node scripts/scoring.ts"
  },
  "devDependencies": {
    "@octokit/rest": "^22.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.101.0",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "dotenv": "^17.2.0",
    "esbuild": "^0.25.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "mocha": "^11.7.1",
    "mock-require": "^3.0.3",
    "fastest-levenshtein": "^1.0.16",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@langchain/core": "^0.3.62",
    "@langchain/ollama": "^0.2.3",
    "@langchain/openai": "^0.5.18",
    "langchain": "^0.3.29",
    "xml2js": "^0.6.2"
  }
}
